#!/bin/bash
to_dec() { n=$1 b=$2 r=0 i=0; while [ $i -lt ${#n} ]; do d=$(expr index "$b" "${n:i:1}"); r=$(( r*${#b}+d-1 )); i=$(( i+1 )); done; echo $r; }; from_dec() { n=$1 b=$2 r=""; l=${#b}; while [ $n -gt 0 ]; do m=$(( n%l )); r="${b:m:1}$r"; n=$(( n/l )); done; echo $r; }; echo $(from_dec $(( $(to_dec "$WATER" "ewatr") + $(to_dec "$STIR" "tir") )) "shtbeolhc")
